---
// src/components/main/BlogsTab.astro
import { Image } from "astro:assets";
import { getCollection, type CollectionEntry } from "astro:content";
import { slugify } from "../../utils/utils";

// Define props type
interface Props {
  posts?: CollectionEntry<"blog">[];
}

// Fetch posts during build
const posts = await getCollection("blog");
---

<div class="blogs-tab">
  <div class="blog-grid">
    {
      posts?.map((post) => {
        const slug = slugify(post.data.title);
        return (
          <a href={`/home/blogs/${slug}`} class="post-card">
            <div class="post-card-content">
              <h3 class="post-card-title">{post.data.title}</h3>
              {post.data.description && (
                <p class="post-card-description">{post.data.description}</p>
              )}
            </div>
            {post.data.cover && (
              <div class="post-card-image">
                <Image
                  src={post.data.cover}
                  alt={post.data.coverAlt || post.data.title}
                  width={300}
                  height={200}
                  format="webp"
                  transition:name={`blog-image-${slug}`}
                />
              </div>
            )}
          </a>
        );
      })
    }
  </div>
</div>

<style>
  .blog-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    padding: 1rem 0;
    background-color: rgba(0, 0, 0, 0.215);
  }

  .post-card {
    color: black;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    /* background: white; */
    /* border: 1px solid gray; */
    text-decoration: none;
    color: inherit;
    /* border-radius: 0.5rem; */
    overflow: hidden;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .post-card-image {
    grid-column: span 1;
    border: 1px solid gray;
    /* height: 10rem; */
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .post-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-card-content {
    grid-column: span 2;
    padding: 1rem;
    display: flex;
    flex-direction: column;
  }

  .post-card-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: rgb(255, 255, 255);
  }

  .post-card-description {
    font-size: 1rem;
    line-height: 1.4;
    color: rgb(173, 173, 173);
  }
</style>
