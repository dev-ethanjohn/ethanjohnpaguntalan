---
import { arts } from "../../data/art";
---

<section class="arts">
  <div class="gallery-grid" transition:name={`art-overlay`}>
    {
      arts.map((art) => (
        <div class="card">
          <img class="image" src={art.src} alt={art.id} />
        </div>
      ))
    }
  </div>

  <!-- mobile view -->
  <div class="art__photos" id="arts__photos-pop">
    <div class="mobile-grid">
      {
        arts.slice(0, 4).map((art, index) => (
          <div class="grid-item">
            {index === 3 && arts.length > 4 ? (
              <a href="/arts/all" class="overlay-container">
                <img
                  class="image grid-image"
                  src={art.src}
                  alt={art.id}
                  loading="lazy"
                  onerror="console.error('Image failed to load:', this.src)"
                />
                <div class="overlay">
                  <span class="overlay-text">+{arts.length - 4}</span>
                </div>
              </a>
            ) : (
              <div class="overlay-container">
                <img
                  class="image grid-image"
                  src={art.src}
                  alt={art.id}
                  loading="lazy"
                  onerror="console.error('Image failed to load:', this.src)"
                />
              </div>
            )}
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .gallery-grid {
    columns: 10rem;
    column-gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .card {
    background-color: white;
    border-radius: 1rem;
    margin-bottom: 0.5rem;
    overflow: hidden;
    break-inside: avoid;
  }

  .image-s {
    opacity: 0;
  }

  .opacity-zero {
    opacity: 0;
  }

  /* NOTE: mobile */
  .art__photos {
    border-radius: 1.25rem;
    box-shadow: 0.05rem 0.2rem 0.4rem rgba(0, 0, 0, 0.221);
    position: relative;
    overflow: hidden;
    width: auto;
    aspect-ratio: 1/1;
    border: 1px solid black;
  }

  .mobile-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-gap: 0.25rem;
    aspect-ratio: 1/1;
  }

  .grid-item {
    position: relative;
    overflow: hidden;
    border-radius: 0.625rem;
  }

  .image-container {
    display: block;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .grid-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .image-container:hover .grid-image {
    transform: scale(1.1);
  }

  .overlay-container {
    position: relative;
    display: block;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .overlay-container:hover .grid-image {
    transform: scale(1.1);
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .overlay-text {
    color: white;
    font-size: 1.5rem;
    font-weight: bold;
  }

  .art__photos {
    display: none;
  }

  @media (max-width: 50em) {
    .gallery-grid {
      display: none;
    }

    .art__photos {
      display: block;
    }
  }
</style>
