---
import { projects } from "../../data/project";

interface Props {
  withoutImage?: boolean;
  projectId?: string;
}

const { withoutImage, projectId } = Astro.props;
---

<div class="projects-grid">
  {
    projects.map(async (project) => (
      <div>
        {withoutImage && projectId === project.id ? (
          <div style="height: 457px" />
        ) : (
          // card
          <div transition:name={`card-${project.id}`} class="project">
            <div
              class="project__thumbnail-container"
              transition:name={`wrapper-${project.id}`}
            >
              <a href={`/home/projects/${project.id}`}>
                <img
                  class="project__image"
                  src={project.src}
                  alt={project.id}
                  transition:name={`image-${project.id}`}
                />
              </a>
            </div>

            <div class="project__content">
              <h3 class="project__title">{project.title}</h3>
              <p
                class="project__description"
                transition:name={`description-${project.id}`}
              >
                {project.description[0]}
              </p>

              <div class="project__meta" transition:name={`meta-${project.id}`}>
                <div class="project__stacks">
                  {project.stack.map((stack) => {
                    return (
                      <small
                        class="tech-stack"
                        style={`background-color: ${stack.color}`}
                      >
                        {stack.name}
                      </small>
                    );
                  })}
                </div>

                <ul class="project__links">
                  <li>
                    <a
                      href="https://example.com/live"
                      target="_blank"
                      class="project__links-live"
                    >
                      live
                    </a>
                  </li>

                  <li>
                    <a
                      href="https://example.com/repo"
                      target="_blank"
                      class="project__links-github"
                    >
                      repo
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          // </div>
        )}
      </div>
    ))
  }
</div>

<style>
  /* GRID */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(20rem, 1fr));
    gap: 2rem;
  }

  .project {
    background-color: white;
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .project__content {
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
    padding: 1.5rem;
  }

  .project__thumbnail-container {
    height: 12rem;
    overflow: hidden;
  }

  .project__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .project__title {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: black;
  }

  .project__description {
    color: #555555;
    text-decoration: none;
    list-style: none;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 1.5;
    max-height: calc(1.5em * 3);
  }

  .project-card:hover .project-card__image {
    transform: scale(1.05);
  }

  /* META */
  .project__meta {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .project__stacks {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
</style>

