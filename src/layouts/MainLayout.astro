---
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
  projectId?: string;
  description?: string;
}

const {
  projectId,
  title = "My Astro Blog",
  description = "All about my thoughts and imagination about programming",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=ADLaM+Display&family=Archivo+Black&family=Balsamiq+Sans:ital,wght@0,400;0,700;1,400;1,700&family=Gaegu&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <ClientRouter />

    {
      projectId && (
        <style
          is:global
          set:html={`
        ::view-transition-old(card-${projectId}),
        ::view-transition-new(card-${projectId}) {
          animation: none;
          mix-blend-mode: normal;
          height: 100%;
          overflow: clip;
        }

        ::view-transition-new(image-${projectId}) {
          animation: spring-scale-in 450ms cubic-bezier(0.22, 1, 0.36, 1);
        }

        ::view-transition-new(meta-${projectId}) {
          animation:
            90ms cubic-bezier(0.4, 0, 1, 1) both fade-in,
            300ms cubic-bezier(0.4, 0, 0.2, 1) both slide-from-bottom-2;
          animation-delay: 250ms;
        }

        ::view-transition-new(description-${projectId}) {
          animation:
            90ms cubic-bezier(0.4, 0, 1, 1) both fade-in,
            300ms cubic-bezier(0.4, 0, 0.2, 1) both slide-from-bottom;
          animation-delay: 250ms;
        }

        ::view-transition-group(card-${projectId}) {
          z-index: 1;
        }

        ::view-transition-group(meta-${projectId}),
        ::view-transition-group(description-${projectId}),
        ::view-transition-group(image-${projectId}) {
          z-index: 2;
        }

        @keyframes fade-in {
          from { opacity: 0; }
        }

        @keyframes fade-out {
          to { opacity: 0; }
        }

        @keyframes slide-from-bottom {
          from { transform: translateY(30px); }
        }

        @keyframes slide-from-bottom-2 {
          from { transform: translateY(10px); }
        }

        @keyframes spring-scale-in {
          0% { transform: scale(0.6); }
          60% { transform: scale(1.005); }
          100% { 
            transform: scale(1);
            border-radius: 2rem 0 0 2rem;
          }
        }
      `}
        />
      )
    }
  </head>

  <body>
    <slot />
  </body>
</html>
