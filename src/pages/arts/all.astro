---
import { arts } from "../../data/art";
import MainLayout from "../../layouts/MainLayout.astro";
---

<MainLayout title="All Artworks">
  <section class="arts">
    <div class="nav-container">
      <a href="/" class="back-button" aria-label="Go back to gallery">‚Üê Back</a>
      <h1>All Artworks</h1>
    </div>
    <div class="gallery-grid">
      {
        arts.map((art) => (
          // <div class="card">
          <img
            class="image"
            src={art.src}
            alt={art.id}
            loading="lazy"
            onerror="console.error('Image failed to load:', this.src)"
          />
          // </div>
        ))
      }
    </div>
  </section>
</MainLayout>

<style>
  body {
    background-color: black;
    font-family: "Balsamiq Sans", sans-serif;
  }
  .arts {
    padding: 4rem;
  }

  .nav-container {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .back-button {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    color: #ffffff;
    font-weight: bold;
    font-size: 1rem;
    padding: 0.5rem;
    border: none;
    background: none;
    cursor: pointer;
    transition: color 0.3s ease;
  }

  .back-button:hover {
    color: #007bff;
  }

  .gallery-grid {
    row-gap: 0.5rem;
    column-gap: 0.5rem;
    columns: 20rem;
  }

  .card {
    background-color: white;
    border-radius: 1rem;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 1rem;
    margin-bottom: 0.25rem;
  }

  h1 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    text-align: center;
  }
</style>
